---
import BaseLayout from "~/layouts/BaseLayout.astro";
---

<BaseLayout title="Abrahams Portfolio" description="Abrahams Portfolio">
  <div class="first-col">
    <div id="containerAbraham" class="model"></div>
    <h1>Abrahams Portfolio</h1>
  </div>
  <div id="loader-text">Loading model: 0%</div>
  
</BaseLayout>

<script>
  import ShowAbrahamsModel from '~/scripts/showAbrahamsModel';
  new ShowAbrahamsModel('/models/abrahamsModel.glb' ,"containerAbraham");
</script>

<style>
  h1 { 
    font-size: 25px;
    font-family: 'Courier New', Courier, monospace; 
  }

  .first-col{
    display: flex;
    justify-content: center;
    justify-items: center;
    flex-wrap: wrap;
    max-width: 1200px;
    margin: auto;
  }

  .first-col .model, .first-col h1 {
    width: 50%;
  }

  .first-col .model{
    cursor: grab;
  }

  @media screen and (width <= 800px) {
    .first-col .model, .first-col h1 {
      width: 100%;
      }

    .first-col{
      display: flex;
      flex-direction: column-reverse;
      width: 100%;
      margin: auto;
    }
  }

</style>